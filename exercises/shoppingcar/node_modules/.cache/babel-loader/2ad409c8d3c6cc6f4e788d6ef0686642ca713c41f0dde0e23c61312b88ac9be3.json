div>\r\n    </div>\r\n</template>\r\n\r\n<script>\r\nimport EventBus from './EventBus';\r\nexport default {\r\n    props: ['idRef', 'statusRef', 'srcRef', 'infoRef', 'priceRef', 'countRef'],\r\n    data() {\r\n        return {\r\n            itemId: this.idRef,\r\n            itemStatus: this.statusRef,\r\n            itemSrc: this.srcRef,\r\n            itemInfo: this.infoRef,\r\n            itemPrice: (Math.floor(this.priceRef * 100) / 100).toFixed(2),\r\n            itemCount: this.countRef,\r\n        }\r\n    },\r\n    methods: {\r\n        subItem() {\r\n            this.itemCount--;\r\n            if (this.itemCount < 1) {\r\n                alert(\"最少一件\")\r\n                this.itemCount = 1\r\n            }\r\n        },\r\n        incItem() {\r\n            this.itemCount++;\r\n        },\r\n    },\r\n    updated() {\r\n        if (this.itemCount < 1) {\r\n            alert(\"最少一件\")\r\n            this.itemCount = 1\r\n        }\r\n    },\r\n    created() {\r\n        EventBus.$on('FooterToItem', (val) => {\r\n            this.itemStatus = val\r\n        })\r\n    },\r\n    updated() {\r\n        this.$emit('changeItemStatusOrCount', this.itemId, this.itemStatus, this.itemCount)\r\n    }\r\n}\r\n</script>\r\n\r\n<style lang=\"less\" scoped>\r\n#item {\r\n    display: flex;\r\n    height: 100px;\r\n    border-radius: 10px;\r\n    background-color: rgb(187, 163, 163);\r\n    overflow: hidden;\r\n    margin: 5px 0;\r\n\r\n    .select {\r\n        margin: 0 3px;\r\n    }\r\n\r\n    img {\r\n        flex: 1;\r\n        height: 100%;\r\n        border-radius: 10px;\r\n        background-color: pink;\r\n    }\r\n\r\n    .info {\r\n        flex: 3;\r\n        display: flex;\r\n        flex-direction: column;\r\n        justify-content: space-between;\r\n        height: 100%;\r\n        border-radius: 10px;\r\n        padding: 5px;\r\n\r\n        .text {\r\n            height: 50px;\r\n            font-weight: 600;\r\n            overflow: hidden;\r\n        }\r